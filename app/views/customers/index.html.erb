<h1>Customers</h1>

<div id="search">
	<%= render :partial => 'customers/search' %>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Credit card no</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.name %></td>
    <td><%= customer.email %></td>
    <td><%= customer.credit_card_no %></td>
    <td><%= link_to 'View', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Delete', customer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add New Customer', new_customer_path %>
